@model ProductEditModel
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-9">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürün Güncelle</h5>
                <a href="urun.html" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="POST">
                    <input type="hidden" name="id" value="@Model.Id">
                    <div class="row mb-3">
                        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ProductName" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Price" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="IsActive" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="IsHome" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="IsHome" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="CategoryId" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="" selected>Seçiniz</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow">
            <div class="card-body">
                <img src="~/img/@Model.Image" class="img-thumbnail" alt="">
                <input type="file" class="form-control mt-3">
            </div>
        </div>
    </div>
</div>